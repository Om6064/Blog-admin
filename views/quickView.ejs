<%- include("partials/start.ejs") %>
<%- include("partials/navBar.ejs") %>

<div class="flex bg-gray-50 pt-16 min-h-screen">
  <%- include("partials/aside.ejs") %>

  <div id="main-content" class="w-full lg:ml-64 p-6 lg:p-10">
    <main>
      <div class="max-w-4xl mx-auto">

        <!-- Back Button + Actions -->
        <div class="mb-6 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
          <a href="/admin"
             class="inline-flex items-center text-sm font-semibold text-gray-600 hover:text-cyan-600 transition">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            Back to Posts
          </a>

          <div class="flex gap-2">
            <a href="/admin/edit-form/<%= blog?.id %>"
               class="flex items-center px-4 py-2 text-sm font-semibold text-indigo-600 hover:text-indigo-700 bg-indigo-50 hover:bg-indigo-100 rounded-xl transition">
              <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
              Edit
            </a>

            <a href="/admin/delete-blog/<%= blog?.id %>"
               class="flex items-center px-4 py-2 text-sm font-semibold text-red-600 hover:text-red-700 bg-red-50 hover:bg-red-100 rounded-xl transition">
              <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
              </svg>
              Delete
            </a>
          </div>
        </div>

        <!-- Blog Card -->
        <article class="bg-white rounded-3xl shadow-xl overflow-hidden">
          <!-- Cover Image + Tags -->
          <div class="relative h-80 sm:h-96 md:h-[32rem] bg-gray-100">
            <img src="/<%= blog?.blogImage %>" alt="<%= blog?.blogTitle %>"
                 class="w-full h-full object-cover"/>

            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/10 to-transparent"></div>

            <div class="absolute bottom-0 left-0 right-0 p-6 sm:p-8 flex flex-col sm:flex-row justify-between items-start sm:items-end gap-4">
              <div>
                <p class="text-xs uppercase tracking-wide text-gray-200 mb-1">
                  ID: <span class="font-semibold"><%= blog?.id %></span>
                </p>
                <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-white leading-tight">
                  <%= blog?.blogTitle %>
                </h1>
              </div>

              <!-- Tags -->
              <% if (blog?.blogTags) { const tags = blog.blogTags.split(","); %>
                <div class="flex flex-wrap gap-2">
                  <% tags.forEach(tag => { %>
                    <span
                      class="px-3 py-1 bg-white/10 text-xs font-semibold uppercase tracking-wide text-gray-100 rounded-full border border-white/30">
                      <%= tag.trim() %>
                    </span>
                  <% }) %>
                </div>
              <% } %>
            </div>
          </div>

          <!-- Content -->
          <div class="p-6 sm:p-8 lg:p-10 prose max-w-none prose-sm sm:prose-base">
            <p class="text-gray-700 leading-relaxed whitespace-pre-line">
              <%= blog.blogDescription %>
            </p>
          </div>
        </article>

      </div>
    </main>
  </div>
</div>

<script async defer src="/assets/js/buttons.js"></script>
<script src="/assets/js/app.bundle.js"></script>
<%- include("partials/end.ejs") %>
