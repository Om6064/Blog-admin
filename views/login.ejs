<!-- start -->
<%- include("partials/start.ejs") %>

<main class="min-h-screen bg-white flex">

  <!-- Left Section -->
  <section class="hidden md:flex w-1/2 flex-col justify-center px-16 bg-gray-50 border-r border-gray-200">
    <div class="max-w-md">
      <h1 class="text-3xl font-bold text-gray-900 mb-4">
        Admin Platform
      </h1>
      <p class="text-gray-600 text-base leading-relaxed">
        Blogster helps you publish, manage, and organize content efficiently.
        Sign in to access your dashboard and continue your work.
      </p>
    </div>
  </section>

  <!-- Right Section -->
  <section class="w-full md:w-1/2 flex items-center justify-center px-6">
    <div class="w-full max-w-sm">

      <!-- Logo -->
      <div class="mb-10">
        <a href="/admin" class="flex items-center gap-2">
          <img src="/assets/images/logo.svg" class="h-8" alt="Logo">
          <span class="text-xl font-semibold text-gray-800">Admin</span>
        </a>
      </div>

      <!-- Form -->
      <h2 class="text-2xl font-semibold text-gray-900 mb-6">
        Account Login
      </h2>

      <form action="/auth" method="post" class="space-y-6">

        <!-- Email -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Email
          </label>
          <input
            type="email"
            name="userEmail"
            class="w-full border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:border-gray-800"
            placeholder="user@email.com"
            required
          />
        </div>

        <!-- Password -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Password
          </label>
          <input
            type="password"
            name="userPassword"
            class="w-full border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:border-gray-800"
            placeholder="Enter password"
            required
          />
        </div>

        <!-- Button -->
        <button
          type="submit"
          class="w-full border border-gray-800 text-gray-900 py-2 text-sm font-medium hover:bg-gray-900 hover:text-white transition"
        >
          Login
        </button>

        <!-- Signup -->
        <p class="text-sm text-gray-600 text-center">
          New user?
          <a href="/auth/sign-up" class="underline hover:text-gray-900">
            Create an account
          </a>
        </p>

      </form>
    </div>
  </section>

</main>

<!-- end -->
<%- include("partials/end.ejs") %>
